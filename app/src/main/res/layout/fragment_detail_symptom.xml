<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/detail_searchbar"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightArrowSearchBar"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/searchBarMarginTop"
            android:id="@+id/searchBar"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            android:text="@string/detail_title_symptom"
            android:id="@+id/textViewSymptom"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/GreenTitle"
            android:layout_marginTop="@dimen/titleMarginTop"
            android:layout_gravity="center_horizontal|top" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnArrowShowInfo"
            android:layout_marginTop="@dimen/btnArrowShowInfo"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/arrow"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal|top" />

        <include
            layout="@layout/detail_info_symptom"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="@dimen/marginBottomDetailInfo"
            android:layout_marginTop="@dimen/inforTableMarginTop"
            android:id="@+id/detailinformation"
            />

        <include
            layout="@layout/detail_bottom"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:id="@+id/detail_bottom"
            android:layout_gravity="center_horizontal|bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/uberContentTextSize"
            android:text="@string/detail_symptom"
            android:id="@+id/textViewInfoSymptom"
            android:gravity="center_horizontal|top"
            android:layout_marginTop="@dimen/contentMarginTop"
            android:visibility="invisible"
            android:padding="20dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|top" />
    </FrameLayout>



</FrameLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="text_description" parent="text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="edit_text_contact">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/BlackAlpha20</item>
        <item name="android:textColorHighlight">@color/Black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/paddingLeftContactEditText</item>
    </style>

    <style name="image_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

</resources>
